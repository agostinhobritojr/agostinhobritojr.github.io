class Base{
protected:
  int a, b;
public:
  void foo(int x, int y){
    a = x; b = y;
  }
  int getA(void) { return a; }
  int getB(void) { return b; }
};

class Derivada : public Base{
  int c;
public:
  void bar(int z){
    c = z;
  }
  void operator=(Base x){
    a = x.getA(); 
    b = x.getB();
    c = 0;
  }
};

int main(void){
  Base b;
  Derivada d;
  b = d;
  d = b; // OK! Parte indefinida de "d" agora Ã© tratada
}
